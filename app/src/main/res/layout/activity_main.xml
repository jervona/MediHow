<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.medihow.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/background1" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="HELLO USER" />

        <android.support.v7.widget.CardView
            android:id="@+id/location_card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/test_card_view"
            android:layout_gravity="center"
            android:layout_marginEnd="47dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView"
                android:background="@color/white"
                android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/location_icon"
                android:tint="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/find_the_nearest_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="Nearest Location"
                android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/test_card_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="45dp"
            android:layout_below="@+id/imageView">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/test"
                    android:tint="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/eligibility_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="Take eligibility test"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/test_card_view3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            android:layout_below="@+id/test_card_view">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/checklist"
                    android:tint="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/required_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="Documents List"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/some_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/location_card_view"
            android:layout_below="@id/location_card_view">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/medicare"
                    android:tint="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/something"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="Other Resources"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>
